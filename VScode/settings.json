{
    // ====================VScodeのカスタマイズ====================
    // カラーテーマ:ライト
    "workbench.colorTheme": "Default Light+",

    //  アイコン
    "workbench.iconTheme": "vscode-icons",

    //エクスプローラーから「開いている開いているエディター」非表示
    "explorer.openEditors.visible": 0,

    //行と行の文字の上下左右の間隔を変更する
    "editor.letterSpacing": -0.3,
    "editor.lineHeight": 20,

    // ドラッグアンドドロップで選択範囲のテキストを移動できるようにする
    "editor.dragAndDrop": false,

    // 起動時ズームレベル
    "window.zoomLevel": 1,

    // ホイールによるズームを有効化
    "editor.mouseWheelZoom": true,

    // ====================エディター画面構成====================

    // タイトルバーの文字
    "window.title": "${dirty}${activeEditorShort} / ${rootName}",

    //ミニマップの非表示
    // "editor.minimap.enabled": false,

    // ミニマップの最大幅
    "editor.minimap.maxColumn": 60,

    // ミニマップのスライダーの表示方法
    "editor.minimap.showSlider": "always",

    // ミニマップのサイズ
    "editor.minimap.size": "fit",

    // ミニマップを右に表示
    "editor.minimap.side": "right",

    // 選択中の行を強調する
    "editor.renderLineHighlight": "all",
    // 行の左端に余白を作る
    // "editor.glyphMargin": true,
    // 選択範囲の角を丸める
    "editor.roundedSelection": true,
    // 最終行よりも下へのスクロールを許可
    "editor.scrollBeyondLastLine": true,
    // 制御文字の表示
    "editor.renderControlCharacters": true,
    // Tabキーで半角スペースを入力
    "editor.insertSpaces": true,

    // 選択範囲無しでのコピー 不許可
    "editor.emptySelectionClipboard": false,
    // ファイルの終端に空の行を追加
    "files.insertFinalNewline": true,
    // 文字コードを自動判別
    "files.autoGuessEncoding": true,

    // メニューバー(上端)の非表示
    // "window.menuBarVisibility": "toggle",
    // 上段タブを表示
    "workbench.editor.showTabs": true,
    // アクティビティバー(左端)を表示に
    "workbench.activityBar.visible": true,
    // サイドバーを左に
    "workbench.sideBar.location": "left",
    // 下のステータスバーを表示
    "workbench.statusBar.visible": true,

    // ワークスペース内のターミナル、デバッグコンソール、出力、問題の場所
    "workbench.panel.defaultLocation": "right",
    // ターミナルの側面にターミナル タブを一覧として表示する(falseでプルダウン形式)
    "terminal.integrated.tabs.enabled": false,
    // マルチカーソルのショートカットキー(ctrlCmd=WindowではCtrl)
    "editor.multiCursorModifier": "ctrlCmd",


    // 開かれるエディターをプレビュー として表示するかどうか
    "workbench.editor.enablePreview": true,

    // Quick Open で開いたエディター をプレビューとして表示するかどうかを制御します。
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.confirmDelete": false,
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "workbench.startupEditor": "none",
    "workbench.editor.untitled.hint": "hidden",
    // エディターの書式をコピー時に保持するか
    "editor.copyWithSyntaxHighlighting": true,
    "vsicons.dontShowNewVersionMessage": true,

    // 診断データを送信しない
    "telemetry.telemetryLevel": "off",

    // スクロールに関数名を追従
    "editor.stickyScroll.enabled": true,
     // スクロールに関数名を追従する行数
    "editor.stickyScroll.maxLineCount": 3,

    // テキストファイルをMarkdownとして開く
    "files.associations": {
        "*.txt": "markdown"
    },

    // 隠しフォルダを非表示にする
    "files.exclude": {
        // "**/.*": true
    },

    // diff表示で行の前後空白を無視する
    "diffEditor.ignoreTrimWhitespace": false,

    // 余分なホワイトスペースを削除
    "files.trimTrailingWhitespace": true,

    // 単語間以外のホワイトスペースを常時表示
    "editor.renderWhitespace": "boundary",

    //全角空白などの基本的な ASCII 文字と混同される可能性のある文字を強調表示する
    "editor.unicodeHighlight.ambiguousCharacters": true,

    // ====================デバック====================

    //ブレークポイントの表示
    "editor.glyphMargin": true,

    // デバッグコンソールの表示方法
    "debug.internalConsoleOptions": "openOnSessionStart",

    // デバッグ中に行内に変数値を表示
    "debug.inlineValues": "on",

    // デバッグビューの表示方法
    "debug.openDebug": "openOnSessionStart",


    // ==================== remote SSH ====================
    "remote.SSH.remotePlatform": {
        "RaspberryPi-SSSS": "linux",
        "RaspberryPi-v4": "linux",
        "RaspberryPi": "linux",
        "RaspberryPi-v6": "linux",
        "raspberrypi": "linux"
    },

    "remote.extensionKind": {
        "pub.name": [
            "ui"
        ]
    },

    // ====================plantUML====================
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:8080",
    "markdown-pdf.plantumlServer": "http://localhost:8080",
    // ====================以下自動追加====================

}

