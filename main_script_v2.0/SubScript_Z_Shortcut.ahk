;***********************zショートカット*****************************************************

z::Send("{Blind}{z}") ;[z] -> [z]
^z::Send("{Blind}^{z}") ;[Ctrl] + [z] -> [Ctrl + z]
+z::Send("{Blind}+{z}") ;[shift] + [z] -> [shift + z]
!z::Send("{Blind}!{z}") ;[alt] + [z] -> [alt + z]

z & x::Send("{Blind}{.}") ;[z] + [x] -> [.]
z & c::Send("{Blind}{,}") ;[z] + [x] -> [,]
z & v::Send("{Blind}{/}") ;[z] + [x] -> [/]

z & h::Send("{Blind}{←}") ;[z] + [h] -> [←]
z & j::Send("{Blind}{↓}") ;[z] + [j] -> [↓]
z & k::Send("{Blind}{↑}") ;[z] + [k] -> [↑]
z & l::Send("{Blind}{→}") ;[z] + [l] -> [→]

z & [::Send("{Blind}{[}") ;[z] + ["["] -> ["["]
z & ]::Send("{Blind}{]}") ;[z] + ["]"] -> ["]"]

z & 8::Send("【") ;[z] + [8] -> [【]
z & 9::Send("】") ;[z] + [9] -> [】]

